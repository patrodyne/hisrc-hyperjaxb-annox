<?xml version="1.0"?>

<!-- Usage: ant -f replace-version.xml -->
<project name="replace-version" default="main">

	<target name="main">

		<replace dir="${basedir}" summary="true">
			<include name="**/*pom.xml"/>
			<replacetoken><![CDATA[version>2.0.0-SNAPSHOT</version>]]></replacetoken>
			<replacevalue><![CDATA[version>2.0.1-SNAPSHOT</version>]]></replacevalue>
		</replace>

	</target>

</project>
